from datetime import datetime
p = input('1 для вашего времени или 2 для текущего: ')

if p == '1':
	time = input('введите время: ')
	timelist = time.split(':')
	h = int(timelist[0])
	m = int(timelist[1])
elif p == '2':
	x = datetime.now().time()
	h = x.hour
	m = x.minute
